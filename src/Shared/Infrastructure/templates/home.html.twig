{% extends 'layout.html.twig' %}

{% block main %}
    <h1>Lista de Libros</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for libro in libros %}
                <tr>
                    <td>{{ libro.titulo }}</td>
                    <td>{{ libro.autor }}</td>
                    <td>{{ libro.isbn }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary show" href="/libros/{{ libro.id }}">Ver</a>
                        <a class="btn btn-sm btn-primary edit" href="/libros/{{ libro.id }}/edit">Editar</a>
                        <a class="btn btn-sm btn-primary delete" href="/libros/{{ libro.id }}/delete">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}