{% extends 'layout.html.twig' %}

{% block main %}
    <h1>Nuevo Libro</h1>

    {% if error is defined %}
        <p>{{ error }}</p>
    {% endif %}

    <form action="/libros" method="post">
        {% if id is defined %}
            <input type="hidden" name="id" value="{{ id }}">
        {% endif %}
        <label for="titulo">Título</label>
        <input type="text" name="titulo" id="titulo" required value="{% if titulo is defined %}{{ titulo }}{% endif %}">
        <br>
        <label for="autor">Autor</label>
        <input type="text" name="autor" id="autor" required value="{% if autor is defined %}{{ autor }}{% endif %}">
        <br>
        <label for="descripcion">Descripción</label>
        <textarea name="descripcion" id="descripcion" cols="30" rows="10" required>{% if descripcion is defined %}{{ descripcion }}{% endif %}</textarea>
        <br>
        <label for="isbn">ISBN</label>
        <input type="text" name="isbn" id="isbn" required value="{% if isbn is defined %}{{ isbn }}{% endif %}">
        <br>
        <button type="submit">Guardar</button>
    </form>
    
{% endblock %}