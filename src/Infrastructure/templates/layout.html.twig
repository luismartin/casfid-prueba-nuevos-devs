<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Libros{% endblock %}</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <header>
        <h1>{% block header %}Libros{% endblock %}</h1>
    </header>
    <nav>
        {% block nav %}
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/libros/create">Nuevo Libro</a></li>
        </ul>
        {% endblock %}
    </nav>
    <main>
        {% block main %}{% endblock %}
    </main>
    <footer>
        {% block footer %}Â© 2024 Libros{% endblock %}
    </footer>
    <script>
        window.onload = function() {
            const buttons = document.querySelectorAll('button');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.parentElement.parentElement.getAttribute('data-id');
                    const action = this.classList.contains('delete') ? 'eliminar' : 'editar';
                    window.location.href = `/libros/${id}/${action}`;
                });
            });
        };
    </script>
</body>
</html>